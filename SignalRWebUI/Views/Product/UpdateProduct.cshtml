@model ProductViewModel

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form asp-action="UpdateProduct" asp-route-id="@Model.ProductID" method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Ürün Güncelleme Sayfası</div>
						</div>
						<div class="card-body">

							<div class="form-group">
								<label for="productName">Ürün Adını Giriniz</label>
								<input type="text" class="form-control" id="productName" placeholder="Ürün Adı Giriniz" asp-for="ProductName">
							</div>
							<div class="form-group">
								<label for="price">Ürün Fiyatını Giriniz</label>
								<input type="text" class="form-control" id="price" placeholder="Ürün Fiyatını Giriniz" asp-for="Price">
							</div>
							<div class="form-group">
								<label for="imageUrl">Ürün Görselini Giriniz</label>
								<input type="text" class="form-control" id="imageUrl" placeholder="Ürün Görselini Giriniz" asp-for="ImageUrl">
							</div>
							<div class="form-group">
								<label for="price">Ürün Kategorisini Giriniz</label>
								@Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)Model.CategoryList, new { @class = "form-control" })
							</div>
							<div class="form-group">
								<label for="description">Ürün Açıklamasını Giriniz</label>
								<textarea class="form-control" id="description" placeholder="Ürün Açıklamasını Giriniz" rows="4" cols="3" asp-for="Description"></textarea>
							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">Ürünü Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>




