@model ContactViewModel

@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim Bilgisi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form asp-action="UpdateContact" asp-route-id="@Model.ContactID" method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title"> İletişim Bilgileri Güncelleme Sayfası </div>
						</div>
						<div class="card-body">

							<div class="form-group">
								<label for="Location">Lokasyon Giriniz</label>
								<input type="text" class="form-control" id="Location" asp-for="Location">
							</div>
							<div class="form-group">
								<label for="PhoneNumber">Telefon Numarası Giriniz</label>
								<input type="tel" class="form-control" id="PhoneNumber" asp-for="Phone">
							</div>
							<div class="form-group">
								<label for="Email">Mail Adresi Giriniz</label>
								<input type="email" class="form-control" id="Email" asp-for="Mail">
							</div>
							<div class="form-group">
								<label for="Location">Açıklama Giriniz</label>
								<textarea rows="5" class="form-control" id:"Location" asp-for="FooterDescription"></textarea>
							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim Bilgisini Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>



