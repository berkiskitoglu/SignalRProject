@model SocialMediaViewModel

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form asp-action="UpdateSocialMedia" asp-route-id="@Model.SocialMediaID" method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Sosyal Medya Güncelleme Sayfası</div>
						</div>
						<div class="card-body">

							<div class="form-group">
								<label for="Title">Başlık Giriniz</label>
								<input type="text" class="form-control" id="Title" asp-for="Title">
							</div>
							<div class="form-group">
								<label for="Icon">İkon Giriniz</label>
								<input type="text" class="form-control" id="Icon" asp-for="Icon">
							</div>
							<div class="form-group">
								<label for="Url">Link Giriniz</label>
								<input type="text" class="form-control" id="Url" asp-for="Url">
							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-primary">Sosyal Medya Hesabını Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>






