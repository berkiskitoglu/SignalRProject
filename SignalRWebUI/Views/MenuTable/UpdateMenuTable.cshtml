@model MenuTableViewModel

@{
    ViewData["Title"] = "UpdateMenuTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Masa Bilgisi Güncelleme Sayfası</h4>
		<div class="row">
			<div class="col-md-12">
				<form asp-action="UpdateMenuTable" asp-route-id="@Model.MenuTableID" method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Masa Güncelleme İşlemleri</div>
						</div>
						<div class="card-body">

							<div class="form-group">
								<label for="Name">Masa Adını Giriniz</label>
								<input type="text" class="form-control" id="Name" asp-for="Name">
							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">Masa Bilgisini Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>








