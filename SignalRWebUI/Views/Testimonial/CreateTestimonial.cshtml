@model TestimonialViewModel

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form asp-action="CreateTestimonial" method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Müşteri Yorum Bilgisi Girişi</div>
						</div>
						<div class="card-body">

							<div class="form-group">
								<label for="Name">Müşteri Adını Giriniz</label>
								<input type="text" class="form-control" id="Name" asp-for="Name">
							</div>
							<div class="form-group">
								<label for="Title">Müşteri Ünvanını Giriniz</label>
								<input type="text" class="form-control" id="Title" asp-for="Title">
							</div>
							<div class="form-group">
								<label for="ImageUrl">Müşteri Resim Dosya Yolunu Giriniz</label>
								<input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl">
							</div>
							<div class="form-group">
								<label for="Comment">Müşteri Yorumunu Giriniz</label>
								<textarea rows="5" class="form-control" id="Comment" asp-for="Comment"></textarea>
							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-primary">Yorumu Kaydet</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>





