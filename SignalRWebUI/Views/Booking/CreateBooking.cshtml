@model BookingViewModel

@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form asp-action="CreateBooking" method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Rezervasyon Girişi</div>
						</div>
						<div class="card-body">

							<div class="form-group">
								<label for="Name">Ad Soyad</label>
								<input type="text" class="form-control" id="Name" asp-for="Name">
							</div>
							<div class="form-group">
								<label for="PhoneNumber">Telefon</label>
								<input type="tel" class="form-control" id="PhoneNumber" asp-for="Phone">
							</div>
							<div class="form-group">
								<label for="Mail">Mail</label>
								<input type="email" class="form-control" id="Mail" asp-for="Mail">
							</div>
							<div class="form-group">
								<label for="PersonCount">Kişi Sayısı</label>
								<input type="number" class="form-control" id="PersonCount" asp-for="PersonCount">
							</div>
							<div class="form-group">
								<label for="Date">Rezervasyon Tarihi</label>
								<input type="date" class="form-control" id="Date" asp-for="Date">
							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-primary">Rezervasyon Oluştur</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


