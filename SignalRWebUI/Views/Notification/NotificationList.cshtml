@model List<ResultNotificationDto>

@{
    ViewData["Title"] = "NotificationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Bildirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Bildirim ile ilgili işlemleri aşşağıdan gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">İkon</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Tarih</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Okundu İşaretle</th>
									<th scope="col">Okunmadı İşaretle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.NotificationID</td>
										<td>@item.Type</td>
										<td>@item.Description</td>
										<td>@item.Date.ToString("dd.MM.yyyy HH:mm:ss")</td>
										<td>@(item.Status ? "Okundu" : "Okunmadı")</td>
										<td><a href="/Notification/DeleteNotification/@item.NotificationID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Notification/UpdateNotification/@item.NotificationID" class="btn btn-outline-warning">Güncelle</a></td>
										<td><a href="/Notification/NotificationStatusChangeToTrue/@item.NotificationID" class="btn btn-outline-secondary">Okundu</a></td>
										<td><a href="/Notification/NotificationStatusChangeToFalse/@item.NotificationID" class="btn btn-outline-primary">Okunmadı</a></td>
									</tr>
								}


							</tbody>
						</table>
						<a href="/Notification/CreateNotification" class="btn btn-outline-primary">Yeni Bildirim Girişi</a>

					</div>
				</div>

			</div>
		</div>
	</div>
</div>




