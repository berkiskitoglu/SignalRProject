@model NotificationViewModel


@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim Güncelleme Sayfası</h4>
		<div class="row">
			<div class="col-md-12">
				<form asp-action="UpdateNotification" asp-route-id="@Model.NotificationID" method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Bildirim Güncelle</div>
						</div>
						<div class="card-body">

							<div class="form-group">
								<label for="Title">Bildirim Türü</label>
								<input type="text" class="form-control" id="Title" asp-for="Type">
							</div>

							<div class="form-group">
								<label for="Icon">Bildirim İkon</label>
								<input type="text" class="form-control" id="Icon" asp-for="Icon">
							</div>

							<div class="form-group">
								<label for="Description">Açıklamayı Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="Description"></textarea>
							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">Bildirim Bilgisini Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>




